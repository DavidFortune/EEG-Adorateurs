rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Audio/Media files - allow authenticated users to upload and read
    match /audio/{allPaths=**} {
      // Allow authenticated users to upload media files
      allow create: if request.auth != null &&
        request.resource.size <= 100 * 1024 * 1024 && // Max 100MB
        (request.resource.contentType.matches('audio/.*') ||
         request.resource.contentType.matches('video/.*'));
      
      // Allow authenticated users to read media files
      allow read: if request.auth != null;
      
      // Allow authenticated users to update/delete media files
      allow update, delete: if request.auth != null;
    }
    
    // General files directory (PDFs, documents, images, etc.)
    match /files/{allPaths=**} {
      allow create: if request.auth != null &&
        request.resource.size <= 50 * 1024 * 1024; // Max 50MB for general files
      allow read: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
    
    // General media files directory
    match /media/{allPaths=**} {
      allow create: if request.auth != null &&
        request.resource.size <= 100 * 1024 * 1024;
      allow read: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}