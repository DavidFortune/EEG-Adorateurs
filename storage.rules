rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Audio/Media files - allow authenticated users to upload and read
    match /audio/{allPaths=**} {
      // Allow authenticated users to upload media files
      allow create: if request.auth != null &&
        request.resource.size <= 100 * 1024 * 1024 && // Max 100MB
        (request.resource.contentType.matches('audio/.*') ||
         request.resource.contentType.matches('video/.*'));
      
      // Allow authenticated users to read media files
      allow read: if request.auth != null;
      
      // Allow authenticated users to update/delete media files
      allow update, delete: if request.auth != null;
    }
    
    // General files directory (PDFs, documents, images, etc.)
    match /files/{allPaths=**} {
      allow create: if request.auth != null &&
        request.resource.size <= 50 * 1024 * 1024; // Max 50MB for general files
      allow read: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
    
    // General media files directory
    match /media/{allPaths=**} {
      allow create: if request.auth != null &&
        request.resource.size <= 100 * 1024 * 1024;
      allow read: if request.auth != null;
      allow update, delete: if request.auth != null;
    }

    // Resources directory - for resource-specific media (audio recordings, uploads, etc.)
    match /resources/{resourceId}/{allPaths=**} {
      allow create: if request.auth != null &&
        request.resource.size <= 100 * 1024 * 1024; // Max 100MB
      allow read: if request.auth != null;
      allow update, delete: if request.auth != null;
    }

    // Avatars directory - allow authenticated users to upload and read profile pictures
    match /avatars/{userId}/{allPaths=**} {
      // Users can only upload to their own avatar folder
      allow create: if request.auth != null &&
        request.auth.uid == userId &&
        request.resource.size <= 5 * 1024 * 1024 && // Max 5MB for avatars
        request.resource.contentType.matches('image/.*');
      // Anyone authenticated can read avatars
      allow read: if request.auth != null;
      // Users can only update/delete their own avatar
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}